{
  "segment": "AUT",
  "name": "Authorization Information",
  "description": "Contains treatment authorization information from insurance payors including approval details and limits",
  "standard": "hl7v23",
  "version": "2.3",
  "usage": "O",
  "cardinality": {
    "min": 0,
    "max": "unbounded"
  },
  "fields": {
    "AUT.1": {
      "name": "Authorizing Payor, Plan Code",
      "description": "Plan code of the authorizing insurance payor",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "table": "0072",
      "examples": ["HMO^Health Maintenance Organization", "PPO^Preferred Provider Organization"]
    },
    "AUT.2": {
      "name": "Authorizing Payor, Company ID",
      "description": "Company identifier of the authorizing payor",
      "dataType": "CE",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "table": "0285",
      "examples": ["AETNA^Aetna Health Plans", "BCBS^Blue Cross Blue Shield"]
    },
    "AUT.3": {
      "name": "Authorizing Payor, Company Name",
      "description": "Company name of the authorizing payor",
      "dataType": "ST",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["Aetna Health Plans", "Blue Cross Blue Shield", "United Healthcare"]
    },
    "AUT.4": {
      "name": "Authorization Effective Date",
      "description": "Date when authorization becomes effective",
      "dataType": "TS",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["20220815143000", "20221201120000"]
    },
    "AUT.5": {
      "name": "Authorization Expiration Date",
      "description": "Date when authorization expires",
      "dataType": "TS",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["20230815143000", "20231201120000"]
    },
    "AUT.6": {
      "name": "Authorization Identifier",
      "description": "Unique identifier for this authorization",
      "dataType": "EI",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["AUTH123456", "PREAUTH789012"]
    },
    "AUT.7": {
      "name": "Reimbursement Limit",
      "description": "Maximum reimbursement amount authorized",
      "dataType": "CP",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["5000.00^USD", "10000.00^USD", "2500.00^USD"]
    },
    "AUT.8": {
      "name": "Requested Number of Treatments",
      "description": "Number of treatments requested for authorization",
      "dataType": "NM",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["10", "6", "12"]
    },
    "AUT.9": {
      "name": "Authorized Number of Treatments",
      "description": "Number of treatments actually authorized",
      "dataType": "NM",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["8", "6", "10"]
    },
    "AUT.10": {
      "name": "Process Date",
      "description": "Date when authorization was processed",
      "dataType": "TS",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["20220815143000", "20221201120000"]
    }
  },
  "examples": [
    "AUT|HMO^Health Maintenance Organization|AETNA^Aetna Health Plans|Aetna Health Plans|20220815143000|20230815143000|AUTH123456|5000.00^USD|10|8|20220815143000",
    "AUT|PPO^Preferred Provider Organization|BCBS^Blue Cross Blue Shield|Blue Cross Blue Shield|20221201120000|20231201120000|PREAUTH789012|10000.00^USD|6|6|20221201120000"
  ],
  "notes": [
    "AUT.2 (Authorizing Payor, Company ID) is required to identify the payor",
    "Used with IN1, IN2, IN3 segments for complete insurance authorization workflow",
    "Critical for pre-authorization and treatment approval processes"
  ]
}