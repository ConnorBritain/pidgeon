{
  "segment": "PR1",
  "name": "Procedures",
  "description": "Contains information about procedures performed on a patient including surgical, diagnostic, and therapeutic procedures",
  "standard": "hl7v23",
  "version": "2.3",
  "usage": "O",
  "cardinality": {
    "min": 0,
    "max": "unbounded"
  },
  "fields": {
    "PR1.1": {
      "name": "Set ID - Procedure",
      "description": "Sequence number for procedure segments within message",
      "dataType": "SI",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "examples": ["1", "2", "3"]
    },
    "PR1.2": {
      "name": "Procedure Coding Method",
      "description": "Coding system used for the procedure",
      "dataType": "IS",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "table": "0089",
      "examples": ["C4", "I9", "I10"]
    },
    "PR1.3": {
      "name": "Procedure Code",
      "description": "Coded procedure using specified coding method",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["36415^Venipuncture^CPT4", "99213^Office visit^CPT4", "0016T^Appendectomy^ICD10PCS"]
    },
    "PR1.4": {
      "name": "Procedure Description",
      "description": "Text description of the procedure",
      "dataType": "ST",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["Routine blood draw", "Annual physical exam", "Laparoscopic appendectomy"]
    },
    "PR1.5": {
      "name": "Procedure Date/Time",
      "description": "Date and time when procedure was performed",
      "dataType": "TS",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["20220815143000", "20221201120000"]
    },
    "PR1.6": {
      "name": "Procedure Type",
      "description": "Type or category of procedure",
      "dataType": "ID",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "table": "0230",
      "examples": ["S", "D", "T"]
    },
    "PR1.7": {
      "name": "Procedure Minutes",
      "description": "Duration of the procedure in minutes",
      "dataType": "NM",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["15", "60", "120"]
    },
    "PR1.8": {
      "name": "Anesthesiologist",
      "description": "Anesthesiologist who provided anesthesia",
      "dataType": "XCN",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["12345^SMITH^JOHN^MD", "67890^JONES^MARY^MD"]
    },
    "PR1.9": {
      "name": "Anesthesia Code",
      "description": "Type of anesthesia used",
      "dataType": "IS",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "table": "0019",
      "examples": ["LMA", "ETT", "MAC"]
    },
    "PR1.10": {
      "name": "Anesthesia Minutes",
      "description": "Duration of anesthesia in minutes",
      "dataType": "NM",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["30", "90", "180"]
    },
    "PR1.11": {
      "name": "Surgeon",
      "description": "Primary surgeon who performed the procedure",
      "dataType": "XCN",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["11111^BROWN^SUSAN^MD", "22222^DAVIS^ROBERT^MD"]
    },
    "PR1.12": {
      "name": "Procedure Practitioner",
      "description": "Other practitioners involved in the procedure",
      "dataType": "XCN",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["33333^WILSON^JAMES^RN", "44444^TAYLOR^LISA^TECH"]
    },
    "PR1.13": {
      "name": "Consent Code",
      "description": "Consent status for the procedure",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["VERBAL^Verbal consent", "WRITTEN^Written consent", "IMPLIED^Implied consent"]
    },
    "PR1.14": {
      "name": "Procedure Priority",
      "description": "Priority level of the procedure",
      "dataType": "NM",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["1", "2", "3"]
    },
    "PR1.15": {
      "name": "Associated Diagnosis Code",
      "description": "Diagnosis code associated with the procedure",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["K35.9^Acute appendicitis^ICD10", "I25.10^CAD^ICD10"]
    }
  },
  "examples": [
    "PR1|1|C4|36415^Venipuncture^CPT4|Routine blood draw|20220815143000|D|15|||||||",
    "PR1|1|C4|0016T^Appendectomy^ICD10PCS|Laparoscopic appendectomy|20221201120000|S|120|12345^SMITH^JOHN^MD|LMA|90|11111^BROWN^SUSAN^MD||WRITTEN^Written consent|1|K35.9^Acute appendicitis^ICD10"
  ],
  "notes": [
    "PR1.1 (Set ID), PR1.2 (Procedure Coding Method), and PR1.6 (Procedure Type) are required",
    "Multiple PR1 segments can represent different procedures performed",
    "Used to document surgical, diagnostic, and therapeutic procedures"
  ]
}