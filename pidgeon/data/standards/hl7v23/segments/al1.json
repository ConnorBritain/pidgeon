{
  "segment": "AL1",
  "name": "Patient Allergy Information",
  "description": "Contains patient allergy and adverse reaction information for safety alerts",
  "standard": "hl7v23",
  "version": "2.3",
  "usage": "O",
  "cardinality": {
    "min": 0,
    "max": "unbounded"
  },
  "fields": {
    "AL1.1": {
      "name": "Set ID - AL1",
      "description": "Sequence number for AL1 segments within message",
      "dataType": "SI",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "examples": ["1", "2", "3"]
    },
    "AL1.2": {
      "name": "Allergy Type",
      "description": "Type or category of allergy",
      "dataType": "ID",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "table": "0127",
      "validValues": ["DA", "FA", "MA", "MC", "EA", "AA"],
      "examples": ["DA", "FA", "MA"]
    },
    "AL1.3": {
      "name": "Allergy Code/Mnemonic/Description",
      "description": "Code or description of the allergen",
      "dataType": "CE",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "examples": ["ASPIRIN^Aspirin^L", "PENICILLIN^Penicillin^L", "LATEX^Latex^L"]
    },
    "AL1.4": {
      "name": "Allergy Severity",
      "description": "Severity level of allergic reaction",
      "dataType": "IS",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "table": "0128",
      "validValues": ["SV", "MO", "MI", "U"],
      "examples": ["SV", "MO", "MI"]
    },
    "AL1.5": {
      "name": "Allergy Reaction",
      "description": "Description of allergic reaction or symptoms",
      "dataType": "ST",
      "usage": "O",
      "cardinality": {"min": 0, "max": "unbounded"},
      "examples": ["RASH", "ANAPHYLAXIS", "NAUSEA"]
    },
    "AL1.6": {
      "name": "Identification Date",
      "description": "Date when allergy was first identified",
      "dataType": "DT",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["20220815", "19951201"]
    }
  },
  "examples": [
    "AL1|1|DA|ASPIRIN^Aspirin^L|SV|ANAPHYLAXIS|20220815",
    "AL1|2|FA|PEANUTS^Peanuts^L|MO|RASH|19951201",
    "AL1|3|MA|LATEX^Latex^L|MI|CONTACT DERMATITIS|20100503"
  ],
  "notes": [
    "AL1.1 (Set ID) is required for segment sequencing",
    "AL1.3 (Allergy Code) is required to identify the allergen",
    "Critical safety information - should be prominently displayed"
  ]
}