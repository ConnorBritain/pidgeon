{
  "segment": "RXA",
  "name": "Pharmacy/Treatment Administration",
  "description": "Contains information about actual administration of medications or treatments to patients",
  "standard": "hl7v23",
  "version": "2.3",
  "usage": "O",
  "cardinality": {
    "min": 0,
    "max": "unbounded"
  },
  "fields": {
    "RXA.1": {
      "name": "Give Sub-ID Counter",
      "description": "Sequential number for multiple administrations of same medication",
      "dataType": "ID",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "examples": ["1", "2", "3"]
    },
    "RXA.2": {
      "name": "Administration Sub-ID Counter",
      "description": "Sequential counter for administration events",
      "dataType": "NM",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "examples": ["1", "2", "3"]
    },
    "RXA.3": {
      "name": "Date/Time Start of Administration",
      "description": "Date and time when administration began",
      "dataType": "TS",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "examples": ["20220815143000", "20221201120000"]
    },
    "RXA.4": {
      "name": "Date/Time End of Administration",
      "description": "Date and time when administration ended",
      "dataType": "TS",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "examples": ["20220815143500", "20221201123000"]
    },
    "RXA.5": {
      "name": "Administered Code",
      "description": "Code for the medication or treatment that was administered",
      "dataType": "CE",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "examples": ["ASA81^Aspirin 81mg^NDC", "AMX500^Amoxicillin 500mg^NDC"]
    },
    "RXA.6": {
      "name": "Administered Amount",
      "description": "Amount of medication or treatment administered",
      "dataType": "NM",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "examples": ["1", "2.5", "0.5"]
    },
    "RXA.7": {
      "name": "Administered Units",
      "description": "Units for the administered amount",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["TAB^Tablet", "ML^Milliliter", "MG^Milligram"]
    },
    "RXA.8": {
      "name": "Administered Dosage Form",
      "description": "Dosage form of the administered medication",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["TAB^Tablet", "CAP^Capsule", "INJ^Injection"]
    },
    "RXA.9": {
      "name": "Administration Notes",
      "description": "Notes about the administration event",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["TOLERATED^Well tolerated", "ADVERSE^Adverse reaction noted"]
    },
    "RXA.10": {
      "name": "Administering Provider",
      "description": "Provider who administered the medication",
      "dataType": "XCN",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["12345^SMITH^MARY^RN", "67890^JONES^JOHN^MD"]
    },
    "RXA.11": {
      "name": "Administered-at Location",
      "description": "Location where administration occurred",
      "dataType": "CM_LA1",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1}
    },
    "RXA.12": {
      "name": "Administered Per",
      "description": "Time unit for administration (per dose, per day, etc.)",
      "dataType": "ST",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["DOSE", "DAY", "HOUR"]
    },
    "RXA.13": {
      "name": "Administered Strength",
      "description": "Strength of the administered medication",
      "dataType": "NM",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["81", "500", "10"]
    },
    "RXA.14": {
      "name": "Administered Strength Units",
      "description": "Units for the administered strength",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["MG^Milligram", "MCG^Microgram", "UNIT^Unit"]
    },
    "RXA.15": {
      "name": "Substance Lot Number",
      "description": "Lot number of the administered substance",
      "dataType": "ST",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["LOT123456", "BATCH789012"]
    },
    "RXA.16": {
      "name": "Substance Expiration Date",
      "description": "Expiration date of the administered substance",
      "dataType": "TS",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["20231215", "20240630"]
    },
    "RXA.17": {
      "name": "Substance Manufacturer Name",
      "description": "Manufacturer of the administered substance",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["PFIZER^Pfizer Inc", "MERCK^Merck & Co"]
    },
    "RXA.18": {
      "name": "Substance Refusal Reason",
      "description": "Reason if patient refused the medication",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["ALLERGY^Allergy concern", "REFUSED^Patient refused"]
    },
    "RXA.19": {
      "name": "Indication",
      "description": "Indication or reason for administration",
      "dataType": "CE",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["PAIN^Pain management", "HTN^Hypertension", "INFECTION^Bacterial infection"]
    },
    "RXA.20": {
      "name": "Completion Status",
      "description": "Status of the administration completion",
      "dataType": "ID",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "table": "0322"
    },
    "RXA.21": {
      "name": "Action Code-RXA",
      "description": "Action code for this administration record",
      "dataType": "ID",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "table": "0323"
    },
    "RXA.22": {
      "name": "System Entry Date/Time",
      "description": "Date and time when administration was entered into system",
      "dataType": "TS",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1},
      "examples": ["20220815144000", "20221201125000"]
    }
  },
  "examples": [
    "RXA|1|1|20220815143000|20220815143500|ASA81^Aspirin 81mg^NDC|1|TAB^Tablet|TAB^Tablet||12345^SMITH^MARY^RN||||||||||",
    "RXA|1|1|20221201120000|20221201123000|AMX500^Amoxicillin 500mg^NDC|1|CAP^Capsule|CAP^Capsule||67890^JONES^JOHN^MD||||||||||"
  ],
  "notes": [
    "RXA.1 through RXA.6 are required fields for proper administration tracking",
    "Used to document actual medication administration events",
    "Multiple RXA segments can represent different administration events"
  ]
}