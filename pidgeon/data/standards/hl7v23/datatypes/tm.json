{
  "dataType": "TM",
  "name": "Time",
  "description": "Time using 24-hour clock notation with variable precision. Allows optional minutes, seconds, fractional seconds, and timezone specification.",
  "standard": "hl7v23",
  "version": "2.3",
  "category": "primitive",
  "usage": [
    "Appointment and scheduling times",
    "Medication administration times",
    "Observation collection times"
  ],
  "examples": [
    "14",
    "1430",
    "143015"
  ],
  "constraints": {
    "encoding": "HH[MM[SS[.S[S[S[S]]]]]][+/-ZZZZ] format",
    "validation": "24-hour clock, hours required, minutes/seconds/timezone optional"
  }
}