{
  "dataType": "CX",
  "name": "Extended Composite ID with Check Digit",
  "description": "Extended composite identifier with optional check digit calculation and validation. Used for patient identifiers, medical record numbers, and other critical healthcare identifiers.",
  "standard": "hl7v23",
  "version": "2.3",
  "category": "composite",
  "components": {
    "CX.1": {
      "name": "ID Number",
      "dataType": "ST",
      "description": "The identifier value itself",
      "length": 15,
      "usage": "required",
      "position": 1
    },
    "CX.2": {
      "name": "Identifier Check Digit",
      "dataType": "ST",
      "description": "Check digit for validation. Null if ID is alphanumeric",
      "length": 1,
      "usage": "optional",
      "position": 2
    },
    "CX.3": {
      "name": "Check Digit Scheme",
      "dataType": "ID",
      "description": "Code identifying check digit scheme (Table 0061)",
      "length": 3,
      "usage": "optional",
      "position": 3
    },
    "CX.4": {
      "name": "Assigning Authority",
      "dataType": "HD",
      "description": "System that created the identifier",
      "usage": "optional",
      "position": 4
    },
    "CX.5": {
      "name": "Identifier Type Code",
      "dataType": "IS",
      "description": "Type of identifier (Table 0203)",
      "length": 5,
      "usage": "optional",
      "position": 5
    },
    "CX.6": {
      "name": "Assigning Facility",
      "dataType": "HD",
      "description": "Location where identifier was first assigned",
      "usage": "optional",
      "position": 6
    }
  },
  "usage": [
    "Patient identifiers in PID.3",
    "Visit numbers in PV1.19",
    "Account numbers in PID.18"
  ],
  "examples": [
    "12345^0^M10^GOODHEALTH^MR",
    "555444333^7^M11^SSA^SS",
    "A123456789^^^ACME^AN"
  ],
  "constraints": {
    "encoding": "Components separated by ^ (component separator)",
    "validation": "Check digit and scheme null if ID is alphanumeric"
  }
}