{
  "dataType": "XPN",
  "name": "Extended Person Name",
  "description": "Extended person name with multiple components for comprehensive name representation in healthcare messages.",
  "standard": "hl7v23",
  "version": "2.3",
  "category": "composite",
  "components": {
    "XPN.1": {
      "name": "Family Name",
      "dataType": "ST",
      "description": "Patient or person's family name (surname)",
      "usage": "optional",
      "position": 1
    },
    "XPN.2": {
      "name": "Given Name",
      "dataType": "ST",
      "description": "Patient or person's given name (first name)",
      "usage": "optional",
      "position": 2
    },
    "XPN.3": {
      "name": "Middle Initial Or Name",
      "dataType": "ST",
      "description": "Patient or person's middle name or initial",
      "usage": "optional",
      "position": 3
    },
    "XPN.4": {
      "name": "Suffix",
      "dataType": "ST",
      "description": "Name suffix (Jr., Sr., III, etc.)",
      "usage": "optional",
      "position": 4
    },
    "XPN.5": {
      "name": "Prefix",
      "dataType": "ST",
      "description": "Name prefix (Mr., Mrs., Dr., etc.)",
      "usage": "optional",
      "position": 5
    },
    "XPN.6": {
      "name": "Degree",
      "dataType": "ST",
      "description": "Academic or professional degree",
      "usage": "optional",
      "position": 6
    },
    "XPN.7": {
      "name": "Name Type Code",
      "dataType": "ID",
      "description": "Type of name (legal, alias, etc.)",
      "usage": "optional",
      "position": 7
    },
    "XPN.8": {
      "name": "Name Representation Code",
      "dataType": "ID",
      "description": "Name representation method",
      "usage": "optional",
      "position": 8
    }
  },
  "usage": [
    "Patient names in PID.5",
    "Provider names in various segments",
    "Next of kin names in NK1"
  ],
  "examples": [
    "Doe^John^A^Jr^Mr^^L",
    "Smith^Jane^Marie^^^Dr^L",
    "Johnson^Robert^^^^MD^L"
  ],
  "constraints": {
    "encoding": "Components separated by ^ (component separator)",
    "validation": "At minimum, family name or given name should be present"
  }
}