{
  "messageType": "ADT",
  "triggerEvent": "A04",
  "name": "Register a Patient",
  "description": "Sent when a patient is registered for services at a healthcare facility but not admitted",
  "standard": "hl7v23",
  "version": "2.3",
  "category": "Patient Administration",
  "structure": [
    {
      "type": "segment",
      "segment": "MSH",
      "name": "Message Header",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "notes": ["MSH.9 must be 'ADT^A04'"]
    },
    {
      "type": "segment",
      "segment": "EVN",
      "name": "Event Type",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "notes": ["EVN.1 must be 'A04'"]
    },
    {
      "type": "segment",
      "segment": "PID",
      "name": "Patient Identification",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "notes": ["PID.3 Patient Identifier List is critical for patient matching"]
    },
    {
      "type": "segment",
      "segment": "PD1",
      "name": "Additional Demographics",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1}
    },
    {
      "type": "segment",
      "segment": "NK1",
      "name": "Next of Kin/Associated Parties",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0},
      "notes": ["Emergency contact information"]
    },
    {
      "type": "segment",
      "segment": "PV1",
      "name": "Patient Visit",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "notes": ["PV1.2 Patient Class typically 'O' for outpatient"]
    },
    {
      "type": "segment",
      "segment": "PV2",
      "name": "Patient Visit - Additional Information",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1}
    },
    {
      "type": "segment",
      "segment": "DB1",
      "name": "Disability Information",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0}
    },
    {
      "type": "segment",
      "segment": "OBX",
      "name": "Observation/Result",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0},
      "notes": ["May include registration vitals or observations"]
    },
    {
      "type": "segment",
      "segment": "AL1",
      "name": "Patient Allergy Information",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0},
      "notes": ["Important safety information for registered patient"]
    },
    {
      "type": "segment",
      "segment": "DG1",
      "name": "Diagnosis",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0},
      "notes": ["Registration diagnosis or chief complaint"]
    },
    {
      "type": "segment",
      "segment": "DRG",
      "name": "Diagnosis Related Group",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1}
    },
    {
      "type": "segment",
      "segment": "PR1",
      "name": "Procedures",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0}
    },
    {
      "type": "segment",
      "segment": "ROL",
      "name": "Role",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0},
      "notes": ["Optional with PR1 segments"]
    },
    {
      "type": "segment",
      "segment": "GT1",
      "name": "Guarantor",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0},
      "notes": ["Financial responsibility information"]
    },
    {
      "type": "segment",
      "segment": "IN1",
      "name": "Insurance",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0},
      "notes": ["Insurance information for registration"]
    },
    {
      "type": "segment",
      "segment": "IN2",
      "name": "Insurance Additional Information",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0}
    },
    {
      "type": "segment",
      "segment": "IN3",
      "name": "Insurance Additional Information - Certification",
      "usage": "O",
      "cardinality": {"min": 0, "max": 0}
    },
    {
      "type": "segment",
      "segment": "ACC",
      "name": "Accident Information",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1}
    },
    {
      "type": "segment",
      "segment": "UB1",
      "name": "Universal Bill Information",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1}
    },
    {
      "type": "segment",
      "segment": "UB2",
      "name": "Universal Bill 92 Information",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1}
    }
  ],
  "useCases": [
    "Outpatient clinic registration",
    "Emergency department registration (non-admit)",
    "Ambulatory surgery registration",
    "Diagnostic test registration"
  ],
  "examples": [
    "MSH|^~\\&|EPIC|HOSPITAL|||20231201090000||ADT^A04|123456792|P|2.3",
    "EVN|A04|20231201090000",
    "PID|||12345678^^^HOSPITAL^MR||DOE^JOHN^MIDDLE||19800101|M",
    "PV1||O|CLINIC^101^A^HOSPITAL^R||||||||||||||||||||||||||||||||||20231201090000"
  ]
}