{
  "messageType": "ADT",
  "triggerEvent": "A01",
  "name": "Admit/Visit Notification",
  "description": "Sent when a patient undergoes admission and is assigned to a bed, signaling the beginning of a patient's stay in a healthcare facility",
  "standard": "hl7v23",
  "version": "2.3",
  "category": "Patient Administration",
  "structure": [
    {
      "type": "segment",
      "segment": "MSH",
      "name": "Message Header",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "notes": ["MSH.9 must be 'ADT^A01'"]
    },
    {
      "type": "segment",
      "segment": "EVN",
      "name": "Event Type",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "notes": ["EVN.1 must be 'A01'"]
    },
    {
      "type": "segment",
      "segment": "PID",
      "name": "Patient Identification",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "notes": ["PID.3 Patient Identifier List is critical for patient matching"]
    },
    {
      "type": "segment",
      "segment": "NK1",
      "name": "Next of Kin/Associated Parties",
      "usage": "O",
      "cardinality": {"min": 0, "max": "unbounded"},
      "notes": ["Commonly included for admitted patients"]
    },
    {
      "type": "segment",
      "segment": "PV1",
      "name": "Patient Visit",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "notes": ["PV1.2 Patient Class should be 'I' for inpatient", "PV1.44 Admit Date/Time is critical"]
    },
    {
      "type": "segment",
      "segment": "PV2",
      "name": "Patient Visit - Additional Information",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1}
    },
    {
      "type": "segment",
      "segment": "OBX",
      "name": "Observation/Result",
      "usage": "O",
      "cardinality": {"min": 0, "max": "unbounded"},
      "notes": ["May include admission vitals or observations"]
    },
    {
      "type": "segment",
      "segment": "AL1",
      "name": "Patient Allergy Information",
      "usage": "O",
      "cardinality": {"min": 0, "max": "unbounded"},
      "notes": ["Important for patient safety"]
    },
    {
      "type": "segment",
      "segment": "DG1",
      "name": "Diagnosis",
      "usage": "O",
      "cardinality": {"min": 0, "max": "unbounded"},
      "notes": ["Admission diagnosis commonly included"]
    },
    {
      "type": "segment",
      "segment": "PR1",
      "name": "Procedures",
      "usage": "O",
      "cardinality": {"min": 0, "max": "unbounded"}
    },
    {
      "type": "segment",
      "segment": "GT1",
      "name": "Guarantor",
      "usage": "O",
      "cardinality": {"min": 0, "max": "unbounded"}
    },
    {
      "type": "segment",
      "segment": "IN1",
      "name": "Insurance",
      "usage": "O",
      "cardinality": {"min": 0, "max": "unbounded"},
      "notes": ["Very commonly included for billing"]
    },
    {
      "type": "segment",
      "segment": "IN2",
      "name": "Insurance Additional Information",
      "usage": "O",
      "cardinality": {"min": 0, "max": "unbounded"}
    }
  ],
  "useCases": [
    "Hospital patient admission",
    "Emergency department admission to inpatient status",
    "Direct admission from physician office"
  ],
  "examples": [
    "MSH|^~\\&|EPIC|HOSPITAL|||20231201120000||ADT^A01|123456789|P|2.3",
    "EVN|A01|20231201120000",
    "PID|||12345678^^^HOSPITAL^MR||DOE^JOHN^MIDDLE||19800101|M"
  ]
}