{
  "messageType": "DSR",
  "triggerEvent": "Q01",
  "name": "Display Response Message",
  "description": "Sent to provide formatted display responses to query requests",
  "standard": "hl7v23",
  "version": "2.3",
  "category": "Query Management",
  "structure": [
    {
      "type": "segment",
      "segment": "MSH",
      "name": "Message Header",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1},
      "notes": ["MSH.9 must be 'DSR^Q01'"]
    },
    {
      "type": "segment",
      "segment": "MSA",
      "name": "Message Acknowledgment",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1}
    },
    {
      "type": "segment",
      "segment": "QRD",
      "name": "Query Definition",
      "usage": "R",
      "cardinality": {"min": 1, "max": 1}
    },
    {
      "type": "segment",
      "segment": "QRF",
      "name": "Query Filter",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1}
    },
    {
      "type": "segment",
      "segment": "DSP",
      "name": "Display Data",
      "usage": "R",
      "cardinality": {"min": 1, "max": "unbounded"}
    },
    {
      "type": "segment",
      "segment": "DSC",
      "name": "Continuation Pointer",
      "usage": "O",
      "cardinality": {"min": 0, "max": 1}
    }
  ],
  "useCases": [
    "Formatted query result displays",
    "User interface data presentation",
    "Report-style query responses",
    "Structured information display"
  ],
  "examples": [
    "MSH|^~\\&|HIS|HOSPITAL|||20231201200000||DSR^Q01|DSP000001|P|2.3",
    "MSA|AA|QRY000001|Query processed successfully|",
    "QRD|20231201200000|R|I|QRY000001|||1^RD|12345678|DIS",
    "DSP|1||Patient: DOE, JOHN MIDDLE",
    "DSP|2||DOB: 01/01/1980  Sex: Male",
    "DSP|3||Location: 3E-301-A"
  ]
}