<Window x:Class="Segmint.GUI.MainWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:ui="http://schemas.modernwpf.com/2019"
          Title="Segmint HL7 Generator Professional" 
          Height="800" Width="1200"
          MinHeight="600" MinWidth="900"
          WindowStartupLocation="CenterScreen"
          ui:WindowHelper.UseModernWindowStyle="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAccentBrush}" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="âš•" FontSize="24" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Segmint HL7 Generator" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Professional Configuration Management" FontSize="11" Foreground="White" Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>

                <!-- Theme Toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <ui:ToggleSwitch x:Name="ThemeToggle" Header="Dark Mode" Foreground="White" 
                                    HeaderTemplate="{x:Null}" OnContent="" OffContent=""
                                    Toggled="ThemeToggle_Toggled" Margin="0,0,10,0"/>
                    <Button x:Name="SettingsButton" Content="âš™" FontSize="16" Width="40" Height="40" 
                           Style="{DynamicResource AccentButtonStyle}" Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Navigation" FontSize="14" FontWeight="Bold" Margin="10,10,10,5"/>
                        
                        <!-- Configuration Management -->
                        <Expander Header="Configuration Management" IsExpanded="True" Margin="5">
                            <StackPanel Margin="10,5">
                                <Button x:Name="ConfigOverviewButton" Content="ðŸ“Š Overview" HorizontalAlignment="Stretch" 
                                       Style="{DynamicResource AccentButtonStyle}" Margin="0,2" Click="ConfigOverviewButton_Click"/>
                                <Button x:Name="InferConfigButton" Content="ðŸ” Infer from Samples" HorizontalAlignment="Stretch" 
                                       Margin="0,2" Click="InferConfigButton_Click"/>
                                <Button x:Name="ValidateConfigButton" Content="âœ… Validate Messages" HorizontalAlignment="Stretch" 
                                       Margin="0,2" Click="ValidateConfigButton_Click"/>
                                <Button x:Name="CompareConfigButton" Content="ðŸ”„ Compare Configs" HorizontalAlignment="Stretch" 
                                       Margin="0,2" Click="CompareConfigButton_Click"/>
                                <Button x:Name="ManageConfigButton" Content="ðŸ“ Manage Library" HorizontalAlignment="Stretch" 
                                       Margin="0,2" Click="ManageConfigButton_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Message Generation -->
                        <Expander Header="Message Generation" Margin="5">
                            <StackPanel Margin="10,5">
                                <Button x:Name="GenerateMessageButton" Content="ðŸ“ Generate Messages" HorizontalAlignment="Stretch" 
                                       Margin="0,2" Click="GenerateMessageButton_Click"/>
                                <Button x:Name="BatchGenerateButton" Content="ðŸ“‹ Batch Generation" HorizontalAlignment="Stretch" 
                                       Margin="0,2" Click="BatchGenerateButton_Click"/>
                                <Button x:Name="TemplatesButton" Content="ðŸ“„ Message Templates" HorizontalAlignment="Stretch" 
                                       Margin="0,2" Click="TemplatesButton_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Validation &amp; Testing -->
                        <Expander Header="Validation &amp; Testing" Margin="5">
                            <StackPanel Margin="10,5">
                                <Button x:Name="ValidationDashboardButton" Content="ðŸŽ¯ Validation Dashboard" HorizontalAlignment="Stretch" 
                                       Style="{DynamicResource AccentButtonStyle}" Margin="0,2" Click="ValidationDashboardButton_Click"/>
                                <Button x:Name="TestSuitesButton" Content="ðŸ§ª Test Suites" HorizontalAlignment="Stretch" 
                                       Margin="0,2" Click="TestSuitesButton_Click"/>
                                <Button x:Name="ReportsButton" Content="ðŸ“ˆ Reports" HorizontalAlignment="Stretch" 
                                       Margin="0,2" Click="ReportsButton_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Quick Actions -->
                        <TextBlock Text="Quick Actions" FontSize="14" FontWeight="Bold" Margin="10,20,10,5"/>
                        <Button x:Name="ImportSamplesButton" Content="ðŸ“¥ Import HL7 Samples" HorizontalAlignment="Stretch" 
                               Style="{DynamicResource AccentButtonStyle}" Margin="5,2" Click="ImportSamplesButton_Click"/>
                        <Button x:Name="ExportConfigButton" Content="ðŸ“¤ Export Configuration" HorizontalAlignment="Stretch" 
                               Margin="5,2" Click="ExportConfigButton_Click"/>
                        <Button x:Name="HelpButton" Content="â“ Help &amp; Documentation" HorizontalAlignment="Stretch" 
                               Margin="5,2" Click="HelpButton_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                         Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>

            <!-- Content Area -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Breadcrumb Navigation -->
                <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                       BorderBrush="{DynamicResource SystemControlBackgroundBaseLowBrush}" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal" Margin="15,10">
                        <Button x:Name="BackButton" Content="â¬…" Width="30" Height="30" Margin="0,0,10,0" 
                               Click="BackButton_Click" IsEnabled="{Binding CanGoBack}"/>
                        <Button x:Name="ForwardButton" Content="âž¡" Width="30" Height="30" Margin="0,0,10,0" 
                               Click="ForwardButton_Click" IsEnabled="{Binding CanGoForward}"/>
                        <TextBlock x:Name="BreadcrumbText" Text="Configuration Management > Overview" 
                                  VerticalAlignment="Center" FontSize="14" Margin="10,0"/>
                    </StackPanel>
                </Border>

                <!-- Dynamic Content Frame -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ContentPresenter x:Name="MainContentPresenter" Margin="20"/>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
               BorderBrush="{DynamicResource SystemControlBackgroundBaseLowBrush}" BorderThickness="0,1,0,0" Height="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" Text="Ready" VerticalAlignment="Center" Margin="15,0" FontSize="12"/>
                <TextBlock x:Name="ConfigCountText" Grid.Column="1" Text="Configurations: 0" VerticalAlignment="Center" Margin="10,0" FontSize="12"/>
                <TextBlock x:Name="VersionText" Grid.Column="2" Text="v2.0.0" VerticalAlignment="Center" Margin="15,0" FontSize="12" Opacity="0.7"/>
            </Grid>
        </Border>
    </Grid>
</Window>